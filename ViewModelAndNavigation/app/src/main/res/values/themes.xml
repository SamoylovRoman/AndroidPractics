<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewModelAndNavigation" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="TextViewStyle" parent="Theme.ViewModelAndNavigation">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="TextViewStyle.Title" parent="TextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle.TitleDetail" parent="TextViewStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="TextViewStyle.Subtitle" parent="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle.SubtitleDetail" parent="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="TextViewStyle.SimpleTextItalic" parent="TextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewStyle.SimpleTextDetailItalic" parent="TextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="ButtonViewStyle" parent="Theme.ViewModelAndNavigation">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
</resources>